<div class="container article-index-padding">
<div id="topics-page">
    <img class="text-center logo-younguage" src="<%= image_url("younguage.png") %>" alt="">

<span>Sélectionne tes centres d'intérêtes</span>
<div class="topics-div">
  <div class="topics-list">
    <% Topic::NAMES.each do |topic_name| %>
      <div id="<%= topic_name %>" class="sticker empty-sticker sticker_list_margin <% if @topics.include? topic_name %><%= topic_name %><% end %>"><%= topic_name %></div>
    <% end %>
  </div>
  <form action="" method="POST" class="topics-form">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <% @user.topics.each do |topic| %>
      <input id="<%= topic %>" class="topicInput" name="<%= topic %>" type="hidden" value="true">
    <% end %>
    <input id="submit" type="submit" value="Go!">
  </form>
</div>
<%= javascript_pack_tag 'selectTopics' %>
</div>
</div>
