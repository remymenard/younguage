<div class="container article-index-padding">

  <div class="text-center col-12 my-3 p-3">
    <h1 id='youngage'>Younguage</h1>
  </div>

  <% @articles.each do |article| %>

    <%= link_to article_path(article), class: 'article-link' do %>
      <div class="article-item" " style = "color: #311D3F">
        <div>
          <h3><%= article.title %></h3>
        </div>
        <br>
        <div class= "d-flex flex-row justify-content-between align-items-center">
          <div class='d-flex justify-content-start align-items-center'>
              <img class="media-logo-medium" src="<%= image_url("medium-logo.jpeg") %>" alt="">
            <div class='article-infos ml-3 d-flex flex-column align-items-start'>
              <!--<div class='article-date'>5 novembre</div>-->
              <br>
              <!--<div class='article-media'></div>-->
            </div>
          </div>

          <div class="sticker <%= article.topic.name  %>"><%= article.topic.name %></div>
        </div>

      </div>
    <% end %>
  <% end %>
</div>
