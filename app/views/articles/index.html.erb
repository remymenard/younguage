<div class="container article-index-padding">

  <div class="text-center col-12 my-3 p-3">
    <h1 id='youngage'>Younguage</h1>
  </div>

  <% @articles.each do |article| %>

    <%= link_to article_path(article), class: 'article-link' do %>
      <div class="article-item"  style = "color: #311D3F">
        <div>
          <h3><%= article.title.first(62) %></h3>

        </div>

        <div class= "d-flex flex-row justify-content-between align-items-center">
          <div class='d-flex justify-content-start align-items-center'>
            <div class='media-logo-medium'></div>
            <div class='article-infos ml-3 d-flex flex-column align-items-start'>
              <div class='article-date'>5 novembre</div>
              <div class='article-media'>Medium</div>
            </div>
          </div>

          <div class="sticker technology"><%= article.topic.name %></div>
        </div>

      </div>
    <% end %>
  <% end %>
</div>
