


<div id = "myBtn" class= 'head-banner-article'>
  <div class="d-flex" style = "color: #888888">
    <%= link_to articles_path, class: 'btn mt-2', style: 'color: #888888'  do %>
      <i class="fas fa-chevron-left"></i>
    <% end %>
    <div class= "d-flex mt-3">
      <p><%= @article.title.first(35) %></p> <p> ...</p>
    </div>
  </div>

</div>
<div class="banner-article banner-container">
  <div class='h-100 d-flex align-items-center'>
    <h1><%= @article.title %></h1>
  </div>
  <div class='d-flex'>
    <div class="sticker technology mb-3"><%= @article.topic.name %></div>
  </div>
  <div class='media-logo'></div>
</div>
<div class="container padding-20">
  <div id="content">
    <%= sanitize @article.content %>
  </div>
  <!-- TRADUCTION D'UN MOT -->
  <div id="translation" style="display: none;">
    <div class="container">
      <div class="row align-items-center">
        <div id="cross" class="col-3">
          <i class="fas fa-times"></i>
        </div>
        <div id="words" class="col-6">
          <div class="row" id="untranslated">Test</div>
          <div class="row" id="translated">Test</div>
        </div>
        <div class="col-3">
          <div class="tile" id="cloud">
            <div class="icon-container not-saved">
              <i class="icon off far fa-bookmark"></i>
              <i class="icon on fa fa-bookmark"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'translateWords' %>
<%= javascript_pack_tag 'banner' %>
