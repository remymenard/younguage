<div class="banner-article">
  <h1><%= @article.title %></h1>
  <span class="theme"><%= @article.topic.name %></span>
</div>
<div id="content" class="container">
  <%= sanitize @article.content %>
  <div id="translation" style="display: none;">
    <div class="container">
      <div class="row align-items-center">
        <div id="cross" class="col-3">
          <i class="fas fa-times"></i>
        </div>
        <div id="words" class="col-6">
          <div class="row" id="untranslated">Test</div>
          <div class="row" id="translated">Test</div>
        </div>
        <div class="col-3">
          <div id="cloud">
            <i class="fas fa-bookmark"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'translateWords' %>
