<div class="container registration">
  <img class="text-center logo-younguage" src="<%= image_url("younguage.png") %>" alt="logo younguage">
  <div class="choose-bar">
    <%= link_to new_session_path(resource_name) do %>
      <h3>Connection</h3>
    <% end %>
    <h3 class="active">Inscription</h3>
  </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="text-center">
    <div class="container">
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                label: 'Mail',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                label: 'Mot de passe',
                required: true,
                hint: ("#{@minimum_password_length} charactères minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                label: 'Confirmation du mot de passe',
                required: true,
                input_html: { autocomplete: "new-password" } %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "➜", id: "submit" %>
      </div>
    <% end %>
  </div>
</div>
